# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Gets buildings based on limit and offset
# Example http://<application-ip>:<application-port>/buildings?limit=<limit-value>&offset=<offset-value>
GET     /buildings                  controllers.DBController.getBuildings(limit: Int, offset: Int)

# Endpoint that gets number of buildings existing in the db
GET     /count_buildings            controllers.DBController.countBuildings()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
