# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Gets buildings based on limit and offset
# Example http://<application-ip>:<application-port>/buildings?limit=<limit-value>&page=<page-number>&metadata=<true/false>&orderingField=<ordering-field>&fields=<field1,field2,...>
GET     /buildings                  controllers.DBController.getBuildings(limit: Int ?= 5, page: Int ?= 1, metadata : Int ?= 1, orderingField: String ?= "cd_Ugestora", fields: String ?= "*")


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
